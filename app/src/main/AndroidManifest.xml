<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.TriviaApp">
        <activity
                android:name=".activities.DeleteUser"
                android:exported="false" />
        <activity
                android:name=".activities.Leaderboard"
                android:exported="false"
                android:label="@string/title_activity_leaderboard"
                android:theme="@style/Theme.TriviaApp" />

        <service android:name=".Helpers.MusicService" />

        <activity
                android:name=".activities.SignUp"
                android:exported="false" />
        <activity
                android:name=".activities.mySettingsScreen"
                android:exported="false" />
        <activity
                android:name=".activities.GameOver"
                android:exported="false" />
        <activity
                android:name=".activities.Game"
                android:exported="false" />
        <activity
                android:name=".activities.EditUserProperties"
                android:exported="false" />
        <activity
                android:name=".activities.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>