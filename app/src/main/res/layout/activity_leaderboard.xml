<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Leaderboard">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextColor="@android:color/white" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

            <TextView
                    android:text="Top 5 scores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    style="@style/HeaderTextStyle" />

            <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="5"
                    android:layoutDirection="ltr"
                    android:layout_marginTop="16dp">

                <!-- Rank 1 -->
                <TextView
                        android:id="@+id/tvRankName1"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:text="1. User One"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <TextView
                        android:id="@+id/tvScore1"
                        app:layout_column="1"
                        app:layout_row="0"
                        app:layout_gravity="end"
                        android:text="No data"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <!-- Rank 2 -->
                <TextView
                        android:id="@+id/tvRankName2"
                        app:layout_column="0"
                        app:layout_row="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:text="2. User Two"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <TextView
                        android:id="@+id/tvScore2"
                        app:layout_column="1"
                        app:layout_row="1"
                        app:layout_gravity="end"
                        android:text="No data"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <!-- Rank 3 -->
                <TextView
                        android:id="@+id/tvRankName3"
                        app:layout_column="0"
                        app:layout_row="2"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:text="3. User Three"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <TextView
                        android:id="@+id/tvScore3"
                        app:layout_column="1"
                        app:layout_row="2"
                        app:layout_gravity="end"
                        android:text="No data"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <!-- Rank 4 -->
                <TextView
                        android:id="@+id/tvRankName4"
                        app:layout_column="0"
                        app:layout_row="3"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:text="4. User Four"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <TextView
                        android:id="@+id/tvScore4"
                        app:layout_column="1"
                        app:layout_row="3"
                        app:layout_gravity="end"
                        android:text="No data"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <!-- Rank 5 -->
                <TextView
                        android:id="@+id/tvRankName5"
                        app:layout_column="0"
                        app:layout_row="4"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:text="5. User Five"
                        android:textSize="26sp"
                        android:padding="8dp" />

                <TextView
                        android:id="@+id/tvScore5"
                        app:layout_column="1"
                        app:layout_row="4"
                        app:layout_gravity="end"
                        android:text="No data"
                        android:textSize="26sp"
                        android:padding="8dp" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
